<h1>New Bookmark</h1>

<%= simple_form_for [@list, @bookmark], html: { class: 'form-horizontal' } do |f| %>
  <%= f.association :movie, prompt: 'Select a movie', label_html: { class: 'col-sm-2 control-label' }, wrapper_html: { class: 'col-sm-10' } %>
  <%= f.input :comment, label_html: { class: 'col-sm-2 control-label' }, wrapper_html: { class: 'col-sm-10' } %>
  <%= f.button :submit, class: 'btn btn-primary' %>
  
<% end %>
