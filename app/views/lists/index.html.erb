<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand" href="#">
    <%= image_tag 'logowagon.svg', alt: 'Logo' %>
  </a>
  <div class="navbar-nav">
    <div class = row>
      <%= link_to 'My lists', lists_path, class: 'nav-item nav-link' %>
      <%= link_to 'New list', new_list_path, class: 'nav-item nav-link' %>
    </div>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid" style="background-image: url('https://images.unsplash.com/photo-1605034949929-6af5f19593b3?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80');">
  <div class="container">
    <h1 class="display-4">Name</h1>
    <p class="lead">Second</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-6">
        <div class="card" >
          <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg" %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to list.name, list_path(list), class: 'card-title' %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
    <%= link_to 'Create a new movie list', new_list_path, class: 'btn btn-light-green' %>
  </div>
</div>
