<h1><%= @list.name %></h1>

<%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>

<h2>Bookmarks</h2>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %>
      <%= bookmark.comment %>
       <%= link_to 'Delete', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger mt-3' %>
    </li>
  <% end %>
  

  <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary mt-3' %>
</ul>
